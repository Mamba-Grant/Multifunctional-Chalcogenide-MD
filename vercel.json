{
    "builds": [
        { "src": "backend/main.py", "use": "@vercel/python" },
        { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/public" } }
    ],
    "routes": [
        { "src": "/v1/(.*)", "dest": "backend/main.py" },
        { "src": "/(.*)", "dest": "/frontend/public/$1" }
    ]
}
